<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.openjfx.controllers.WelcomeController">    
    <padding>
        <Insets top="80" right="20" bottom="40" left="20"/>
    </padding>
    <!-- Top Section for the Title -->
    <top>
        <VBox alignment="CENTER">
            <Label fx:id="titleLabel" maxWidth="1200" alignment="CENTER"/>
        </VBox>
    </top>

    <!-- Center Section for Text -->
    <center>
        <VBox alignment="CENTER">
            <Label fx:id="textLabel" wrapText="true" maxWidth="1200" alignment="CENTER"/>
        </VBox>
    </center>

    <!-- Bottom Section for Button -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <Button text="Weiter" onAction="#goToLandingPage" />
        </VBox>
    </bottom>
</BorderPane>

